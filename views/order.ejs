<%- include('partials/header', { title: 'Заказать табличку' }) %>

    <!-- Order Form Section -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        Хочу табличку!
                    </div>
                    <div class="card-body">
                        <div class="card-text text-center">
                            <p><strong>Это бесплатно!</strong></p>
                        </div>
                        <form method="post" action="/order">
                            <div class="form-group">
                                <label for="fullName">Имя</label>
                                <input type="text" required name="fullName" class="form-control" id="fullName"
                                    placeholder="Как к Вам обращаться?">
                            </div>
                            <div class="form-group">
                                <label for="email">Электронная почта</label>
                                <input type="email" required name="email" class="form-control" id="email"
                                    placeholder="Для уведомления об отправке">
                            </div>
                            <div class="form-group">
                                <label for="address">Адрес доставки</label>
                                <input type="text" required name="address" class="form-control" id="address"
                                    placeholder="Отправим в ближайший пункт выдачи">
                            </div>
                            <div class="form-group">
                                <%- body.captcha %>
                            </div>
                            <button type="submit" disabled class="btn btn-primary btn-block">Заказать</button>
                        </form>
                    </div>
                    <div class="card-footer text-muted text-center">
                        Таблички отправляются по мере печати. После получения табличку необходимо активировать.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        window.capchaCallback = () => {
            document.querySelector('button[type="submit"]').removeAttribute('disabled');
        };
    </script>

    <%- include('partials/footer', { showSteps: false }) %>